    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:background="#8BC34A"
        android:id="@+id/txt_login"
        android:textSize="25dp"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_login"
        android:layout_alignLeft="@+id/txt_login"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:text="Username : "
        android:textSize="20dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/txt_login"
        android:id="@+id/txt_pass"
    android:text="Password : "
    android:textSize="20dp"
        android:layout_below="@+id/txt_username"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_username"
        android:layout_alignRight="@+id/txt_login"
        android:layout_toRightOf="@+id/txt_username"
        android:background="#E91E63" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_pass"
        android:layout_alignRight="@+id/txt_login"
        android:layout_toRightOf="@+id/txt_username"
        android:background="#E91E63" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/txt_pass"
        android:layout_alignRight="@+id/txt_login"
        android:layout_alignLeft="@+id/txt_login"
        android:layout_marginTop="20dp"
        android:background="#8BC34A" />

</RelativeLayout>